<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3 col-sm-3 text-center">
      <%= link_to product_path(product) ,class: "product_link" do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail center-block") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail center-block") %>
        <% end %>
      <% end %>
      <div>
        <%= product.title %> ï¿¥ <%= product.price %>
      </div>
    </div>
  <% end %>
</div>